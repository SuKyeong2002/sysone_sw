package sec05_threadstates.EX05一BlockedState;

class MyBlockTest {
	// 공유 객체
	MyClass mc = new MyClass();

	// 3개의 쓰레드 필드 생성
	Thread t1=new Thread("thread1"){public void run(){mc.synMethod();};};

	Thread t2=new Thread("thread2"){public void run(){mc.synMethod();};};

	Thread t3=new Thread("thread3"){public void run(){mc.synMethod();};};

	void starAll() {
		t1.start();
		t2.start();
		t3.start();
	}

	class MyClass {
		synchronized void syncMethod() {
			try {Thread.sleep(100);} catch (InterruptedException e) {
				System.out.println("===" + Thread.currentThread().getName() + "====");
				System.out.println("thread1 -> " + t1.getState());
				System.out.println("thread2 -> " + t2.getState());
			}
		}
	}
}

public class BlockedState {
	public static void main(String[] args) {
		MyBlockTest mbt = new MyBlockTest();
		mbt.starAll();
	}
}
